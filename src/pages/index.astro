---
import Layout from '../layouts/Layout.astro';
import Redes from '../components/Redes.astro';
import Especial from '../components/Especial.astro';
import Tecnologys from '../components/Tecnologys.astro';

import { Image } from 'astro:assets';
import JoaquinPerfil from "../assets/JoaquinPerfil.jpg"
import Form from '../components/Form.astro';
---


<Layout title="Portafolio Joaquín León">
	<main>
		<section class=" w-full  py-32 flex  justify-center gap-28  my-20 container">
			<div class="py-28">
				<h1 class="font-bold text-7xl mb-6 text-wrap">
					Hola soy Joaquín León 
				</h1>
				<h2 class="text-2xl opacity-80">Desarrollador  Web e Ingeniero en Gestión de Tecnologías de la información</h2>
			</div>
			<Image class="w-44 md:w-[350px]  rounded-full" src= {JoaquinPerfil} alt="Foto de Perfil Joaquín"/>
		</section>
		<section class="py-10 my-10 md:flex sm:flex-col">
			<h2 class="text-3xl font-bold text-center py-10">Sobre Mi</h2>
		
				<p class="text-center  text-lg mx-auto w-[745px] text-wrap mb-20 ">
					Me atrae las tecnologías, software y hardware.
					me gusta aprovechar todos los recursos online
					disponibles con afán de ser un desarrollador
					capaz de encontrar soluciones sofisticadas a
					problemas complejos.
					Me gusta empatizar con mis compañeros a fin
					de tener un ambiente de trabajo cordial y
					productivo.</p>
			<Redes 
			title='Correo'
			text='joaquileonquero00@gmail.com'
			link=''
			altText='Imagen de Email'
			imagePath='src/assets/sobre.png'
			/>			
		</section>
		<section class="py-2" >
			<h2 class="text-3xl font-bold text-center py-10 mb-16">Experiencia </h2>
			<Especial/>
		</section>
		<section class="py-2 my-11 w-full">
			<h2 class="text-3xl font-bold text-center py-10">Conocimientos </h2>
				<Tecnologys/>
		</section>
		<section class="flex flex-col justify-center w-full">
			<h2 class="text-3xl font-bold text-center py-10">Contacto</h2>
			<Form/>
		</section>
	</main>
</Layout>


